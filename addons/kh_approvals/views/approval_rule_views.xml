<odoo>
  <record id="view_kh_approval_rule_tree" model="ir.ui.view">
    <field name="name">kh.approval.rule.tree</field>
    <field name="model">kh.approval.rule</field>
    <field name="arch" type="xml">
      <tree>
        <field name="sequence"/>
        <field name="name"/>
        <field name="role"/>
        <field name="user_id"/>
        <field name="min_amount"/>
      </tree>
    </field>
  </record>

  <record id="view_kh_approval_rule_form" model="ir.ui.view">
    <field name="name">kh.approval.rule.form</field>
    <field name="model">kh.approval.rule</field>
    <field name="arch" type="xml">
      <form string="Approval Rule">
        <sheet>
          <group>
            <field name="name"/>
            <field name="sequence"/>
            <field name="role"/>
            <field name="user_id"/>
            <field name="min_amount"/>
            <field name="currency_id"/>
            <field name="required"/>
            <field name="company_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
