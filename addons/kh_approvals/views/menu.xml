<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="action_kh_approval_requests_my_v2" model="ir.actions.act_window">
      <field name="name">üìù My Requests</field>
      <field name="res_model">kh.approval.request</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="kh_approvals.view_kh_approval_request_search"/>
      <field name="domain">[('requester_id', '=', uid)]</field>
      <field name="context">{'search_default_my_requests': 1}</field>
      <field name="views">
        [(ref('kh_approvals.view_kh_approval_request_list'), 'list'),
         (ref('kh_approvals.view_kh_approval_request_form_base'), 'form')]
      </field>
    </record>

    <record id="action_kh_approval_requests_to_approve_v2" model="ir.actions.act_window">
      <field name="name">‚úÖ To Approve</field>
      <field name="res_model">kh.approval.request</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="kh_approvals.view_kh_approval_request_search"/>
      <field name="domain">[('approval_line_ids.approver_id','=',uid), ('approval_line_ids.state','=','pending')]</field>
      <field name="context">{'search_default_to_approve': 1}</field>
      <field name="views">
        [(ref('kh_approvals.view_kh_approval_request_list'), 'list'),
         (ref('kh_approvals.view_kh_approval_request_form_base'), 'form')]
      </field>
    </record>

    <record id="action_kh_approval_requests_all_v2" model="ir.actions.act_window">
      <field name="name">üìö All Requests</field>
      <field name="res_model">kh.approval.request</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="kh_approvals.view_kh_approval_request_search"/>
      <field name="views">
        [(ref('kh_approvals.view_kh_approval_request_list'), 'list'),
         (ref('kh_approvals.view_kh_approval_request_form_base'), 'form')]
      </field>
    </record>

    <menuitem id="menu_kh_approvals_root" name="Approvals" sequence="20"/>

    <menuitem id="menu_kh_approvals_my"
              parent="menu_kh_approvals_root"
              name="My Requests"
              action="kh_approvals.action_kh_approval_requests_my_v2"
              sequence="1"/>

    <menuitem id="menu_kh_approvals_to_approve"
              parent="menu_kh_approvals_root"
              name="To Approve"
              action="kh_approvals.action_kh_approval_requests_to_approve_v2"
              sequence="2"/>

    <menuitem id="menu_kh_approvals_all"
              parent="menu_kh_approvals_root"
              name="All Requests"
              action="kh_approvals.action_kh_approval_requests_all_v2"
              sequence="3"/>

    <!-- Your existing actions must exist in Python/XML already -->
    <menuitem id="menu_kh_approvals_rules"
              name="Rules"
              parent="menu_kh_approvals_root"
              action="kh_approvals.action_kh_approval_rules"
              sequence="40"/>
    <menuitem id="menu_kh_departments"
              name="Departments"
              parent="menu_kh_approvals_root"
              action="kh_approvals.action_kh_departments"
              sequence="50"/>
  </data>
</odoo>
