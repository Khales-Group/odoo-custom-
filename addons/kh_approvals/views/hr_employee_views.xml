<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_employee_form_inherit_kh_approvals" model="ir.ui.view">
      <field name="name">hr.employee.form.inherit.kh.approvals</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <div name="button_box" position="inside">
          <button name="action_open_approval_requests"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-check-square-o"
                  invisible="approval_request_count == 0">
            <field name="approval_request_count" widget="statinfo" string="Approvals"/>
          </button>
        </div>
      </field>
    </record>

  </data>
</odoo>