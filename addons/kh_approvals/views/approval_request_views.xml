<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Line subview -->
    <record id="view_kh_approval_line_list" model="ir.ui.view">
      <field name="name">kh.approval.line.list</field>
      <field name="model">kh.approval.line</field>
      <field name="arch" type="xml">
        <list editable="bottom">
          <field name="name"/>
          <field name="approver_id"/>
          <field name="required"/>
          <field name="state"/>
          <field name="note"/>
        </list>
      </field>
    </record>

    <!-- SEARCH view -->
    <record id="view_kh_approval_request_search" model="ir.ui.view">
      <field name="name">kh.approval.request.search</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <search>
          <filter name="my_requests" string="My Requests"
                  domain="[('requester_id','=',uid)]"/>
          <filter name="to_approve" string="To Approve"
                  domain="[('approval_line_ids.approver_id','=',uid), ('approval_line_ids.state','=','pending')]"/>
          <separator/>
          <field name="state"/>
          <field name="requester_id"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="department_id"/>
          <!-- just expose the date field; no filter_domain here -->
          <field name="create_date" string="Created On"/>

          <!-- Optional quick filters by date -->
          <filter string="Today" domain="[('create_date', '>=', context_today())]"/>
          <filter string="Last 7 days"
                  domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>

          <!-- Group-bys -->
          <filter string="Group by Status" context="{'group_by':'state'}"/>
          <filter string="Group by Department" context="{'group_by':'department_id'}"/>
        </search>
      </field>
    </record>

    <!-- LIST view (sorted by newest, shows Created On) -->
    <record id="view_kh_approval_request_list" model="ir.ui.view">
      <field name="name">kh.approval.request.list</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <list default_order="create_date desc">
          <field name="name"/>
          <field name="requester_id"/>
          <field name="amount"/>
          <field name="currency_id"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="department_id"/>
          <field name="create_date" string="Created On"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <!-- FORM view (Approve/Reject visible only for the current pending approver) -->
    <record id="view_kh_approval_request_form_base" model="ir.ui.view">
      <field name="name">kh.approval.request.form</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <form string="Approval Request">
          <header>
            <button name="action_submit" type="object" string="Submit"
                    class="oe_highlight"
                    invisible="state != 'draft'"/>

            <button name="action_approve_request" type="object" string="Approve"
                    class="btn-primary"
                    invisible="state != 'in_review' or not is_current_user_approver"/>
            <button name="action_reject_request" type="object" string="Reject"
                    class="btn-secondary"
                    invisible="state != 'in_review' or not is_current_user_approver"/>

            <button name="action_revise_request" type="object" string="Edit Request"
                    class="btn-secondary"
                    invisible="state == 'draft' or requester_id != uid"/>

            <field name="state" widget="statusbar"
                   statusbar_visible="draft,in_review,approved,rejected"/>
          </header>

          <sheet>
            <group>
              <group>
                <field name="name" required="1" readonly="state != 'draft'"/>
                <field name="requester_id" readonly="1"/>
                <field name="amount" readonly="state != 'draft'"/>
                <field name="currency_id" readonly="state != 'draft'"/>
                <field name="revision" readonly="1"/>
                <field name="last_revised_by" readonly="1"/>
                <field name="last_revised_on" readonly="1"/>
              </group>
              <group>
                <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                <field name="department_id" readonly="state != 'draft'"/>
                <field name="rule_id"
                       readonly="state != 'draft'"
                       domain="[('company_id','in',[False, company_id]), '|', ('department_id','=',False), ('department_id','=',department_id)]"
                       options="{'no_create_edit': True}"/>
              </group>
            </group>

            <notebook>
              <page string="Approval Steps" name="approval_steps">
                <field name="approval_line_ids"
                       context="{'default_request_id': id}"
                       views="{'list': 'kh_approvals.view_kh_approval_line_list'}"/>
              </page>
            </notebook>
          </sheet>

          <chatter>
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </chatter>
        </form>
      </field>
    </record>

  </data>
</odoo>
