<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Rule Step subview -->
    <record id="view_kh_approval_rule_step_list" model="ir.ui.view">
      <field name="name">kh.approval.rule.step.list</field>
      <field name="model">kh.approval.rule.step</field>
      <field name="arch" type="xml">
        <list editable="bottom">
          <field name="sequence"/>
          <field name="name"/>
          <field name="approver_id"/>
        </list>
      </field>
    </record>

    <!-- Rule: search -->
    <record id="view_kh_approval_rule_search" model="ir.ui.view">
      <field name="name">kh.approval.rule.search</field>
      <field name="model">kh.approval.rule</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="active"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="department_id"/>
          <separator/>
          <filter string="Active" domain="[('active','=',True)]"/>
          <filter string="Archived" domain="[('active','=',False)]"/>
          <filter string="Group by Company" context="{'group_by':'company_id'}"/>
          <filter string="Group by Department" context="{'group_by':'department_id'}"/>
        </search>
      </field>
    </record>

    <!-- Rule: list -->
    <record id="view_kh_approval_rule_list" model="ir.ui.view">
      <field name="name">kh.approval.rule.list</field>
      <field name="model">kh.approval.rule</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="active"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="department_id"/>
          <field name="min_amount"/>
          <field name="currency_id"/>
        </list>
      </field>
    </record>

    <!-- Rule: form -->
    <record id="view_kh_approval_rule_form" model="ir.ui.view">
      <field name="name">kh.approval.rule.form</field>
      <field name="model">kh.approval.rule</field>
      <field name="arch" type="xml">
        <form string="Approval Rule">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="department_id"/>
              </group>
              <group>
                <field name="min_amount"/>
                <field name="currency_id"/>
              </group>
            </group>

            <notebook>
              <page string="Steps">
                <field name="step_ids" context="{'default_rule_id': active_id}"
                       views="{'list': 'kh_approvals.view_kh_approval_rule_step_list'}"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action (uses LIST, not tree) -->
    <record id="action_kh_approval_rules" model="ir.actions.act_window">
      <field name="name">Approval Rules</field>
      <field name="res_model">kh.approval.rule</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="kh_approvals.view_kh_approval_rule_search"/>
      <field name="views" eval="[(ref('kh_approvals.view_kh_approval_rule_list'),'list'),
                                 (ref('kh_approvals.view_kh_approval_rule_form'),'form')]"/>
      <field name="context">{}</field>
    </record>

  </data>
</odoo>
