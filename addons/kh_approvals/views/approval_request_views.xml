<odoo>
  <data>

    <!-- Search view with two filters -->
    <record id="view_kh_approval_request_search" model="ir.ui.view">
      <field name="name">kh.approval.request.search</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <search>
          <filter name="my_requests" string="My Requests"
                  domain="[('requester_id','=',uid)]"/>
          <filter name="to_approve" string="To Approve"
                  domain="[
                    '&',
                    ('approval_line_ids.approver_id','=',uid),
                    ('approval_line_ids.state','=','pending')
                  ]"/>
          <separator/>
          <field name="state"/>
          <field name="requester_id"/>
        </search>
      </field>
    </record>

    <!-- List -->
    <record id="view_kh_approval_request_list" model="ir.ui.view">
      <field name="name">kh.approval.request.list</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="requester_id"/>
          <field name="amount"/>
          <field name="currency_id"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <!-- Form -->
    <record id="view_kh_approval_request_form" model="ir.ui.view">
      <field name="name">kh.approval.request.form</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <form string="Approval Request">
          <header>
            <!-- Submit for requester in Draft -->
            <button name="action_submit"
                    type="object"
                    string="Submit"
                    class="oe_highlight"
                    invisible="state != 'draft'"/>

            <!-- Approver actions only when it's their turn -->
            <button name="action_approve_request"
                    type="object"
                    string="Approve"
                    class="btn-primary"
                    invisible="state != 'in_review' or not is_current_user_approver"/>

            <button name="action_reject_request"
                    type="object"
                    string="Reject"
                    class="btn-secondary"
                    invisible="state != 'in_review' or not is_current_user_approver"/>

            <field name="state" widget="statusbar"
                   statusbar_visible="draft,in_review,approved,rejected"/>
          </header>

          <sheet>
            <group>
              <group>
                <field name="name" required="1"/>
                <field name="requester_id" readonly="1"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="line_rule_ids" widget="many2many_tags" string="Approval Route"/>
              </group>
            </group>

            <notebook>
              <page string="Approval Steps">
                <field name="approval_line_ids">
                  <list editable="bottom">
                    <field name="name"/>
                    <field name="approver_id"/>
                    <field name="required"/>
                    <field name="state"/>
                    <field name="note"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>

          <chatter>
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </chatter>
        </form>
      </field>
    </record>

  </data>
</odoo>
