<odoo>
  <data>
    <!-- SEARCH -->
    <record id="view_kh_approval_request_search" model="ir.ui.view">
      <field name="name">kh.approval.request.search</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <search>
          <filter name="my_requests" string="My Requests" domain="[('requester_id','=',uid)]"/>
          <filter name="to_approve" string="To Approve"
                  domain="[
                    '&amp;',
                    ('approval_line_ids.approver_id','=',uid),
                    ('approval_line_ids.state','=','pending')
                  ]"/>
          <separator/>
          <field name="state"/>
          <field name="requester_id"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="department_id"/>
        </search>
      </field>
    </record>

    <!-- LIST -->
    <record id="view_kh_approval_request_list" model="ir.ui.view">
      <field name="name">kh.approval.request.list</field>
      <field name="model">kh.approval.request</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="requester_id"/>
          <field name="amount"/>
          <field name="currency_id"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="department_id"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <!-- FORM (base, NO inherit_id) -->
    <record id="view_kh_approval_request_form_base" model="ir.ui.view">
      <field name="name">kh.approval.request.form</field>
      <field name="model">kh.approval.request</field>
      <field name="priority" eval="20"/>
      <field name="arch" type="xml">
        <form string="Approval Request">
          <header>
            <button name="action_submit"
                    type="object"
                    string="Submit"
                    class="oe_highlight"
                    invisible="state != 'draft'"/>
            <button name="action_approve_request"
                    type="object"
                    string="Approve"
                    class="btn-primary"
                    invisible="state != 'in_review' or not is_current_user_approver"/>
            <button name="action_reject_request"
                    type="object"
                    string="Reject"
                    class="btn-secondary"
                    invisible="state != 'in_review' or not is_current_user_approver"/>
            <field name="state" widget="statusbar"
                   statusbar_visible="draft,in_review,approved,rejected"/>
          </header>

          <sheet>
            <group>
              <group>
                <field name="name" required="1"/>
                <field name="requester_id" readonly="1"/>
                <field name="amount"/>
                <field name="currency_id"/>
              </group>
              <group>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="department_id"/>
                <field name="rule_id"
                       domain="[('company_id','in',[False, company_id]), '|', ('department_id','=',False), ('department_id','=',department_id)]"
                       options="{'no_create_edit': True}"/>
              </group>
            </group>

            <notebook>
              <page string="Approval Steps" name="approval_steps">
                <field name="approval_line_ids" context="{'default_request_id': id}">
  <tree editable="bottom">
    <field name="name"/>
    <field name="approver_id"/>
    <field name="required"/>
    <field name="state"/>
    <field name="note"/>
  </tree>
</field>

              </page>
            </notebook>
          </sheet>

          <chatter>
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </chatter>
        </form>
      </field>
    </record>
  </data>
</odoo>
