<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- 
    Manager Access Rights
    Grant full CRUD access to managers for configuration models.
  -->
  <data noupdate="1">
    <record id="access_kh_approval_rule_manager" model="ir.model.access">
      <field name="name">access.kh.approval.rule.manager</field>
      <field name="model_id" ref="model_kh_approval_rule"/>
      <field name="group_id" ref="kh_approvals.group_kh_approvals_manager"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_kh_approvals_department_manager" model="ir.model.access">
      <field name="name">access.kh.approvals.department.manager</field>
      <field name="model_id" ref="model_kh_approvals_department"/>
      <field name="group_id" ref="kh_approvals.group_kh_approvals_manager"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>
  </data>
</odoo>